<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The World - @ViewBag.Title</title>
    

    <link href="~/css/style.css" rel="stylesheet" />
</head>

<body>
    <div id="sidebar">
        <img alt="user image" src="~/img/user1.jpg" class="headshot" />
        <span id="username">Sam hasting</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
        <div id="wrapper">
            <div id="main">
                <button id="toggleButton">toggleMenu</button>
                <h1>Hello  World!</h1>
                <p>This will be a fun website soon</p>
                @RenderBody()
            </div>


        <div id="footer">
            &copy; The World Ltd.
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
</body>
</html>